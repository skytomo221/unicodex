<style>
  * {
    box-sizing: border-box;
  }

  :root {
    --primary_color: #5d57ff;
  }

  .station-wrap {
    text-align: center;
    color: #ccc;
    padding: 1rem 0;
    margin: 1rem 0;
  }

  .codepoint {
    position: absolute;
    z-index: 2;
    font-size: 1rem;
    top: -1.5rem;
    letter-spacing: 0.12em;
    color: #b5b5b5;
  }

  /* ライン＋矢印全体を包む */
  .line-wrapper {
    position: relative;
    width: 100%;
  }

  /* 細い赤い矢印の上に駅名プレートを置く */
  .line-core {
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 32px;
    padding: 20px 20px;
    width: 100%;
  }

  .line {
    position: absolute;
    top: calc(50% - 0.5em);
    height: 1em;
    background: var(--primary_color); 
    left: 0;
    right: 0;
  }

  .previous-label {
    z-index: 1;
    font-size: smaller;
    color: white;
  }

  .next-label {
    z-index: 1;
    font-size: smaller;
    color: white;
  }

  .character-station-outer {
    position: relative;
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  /* 駅名プレート（A/B/C） */
  .character-station {
    position: relative;
    z-index: 1;               /* ラインより上に乗せる */
    width: 80px;
    height: 80px;
    border-radius: 12px;
    border: 1px solid #ddd;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 3rem;
    color: gray;
    background: #fafafa;
    box-shadow: 0 2px 6px rgba(0,0,0,0.2);
  }

  .character-station.neighbor1,
  .character-station.neighbor2 {
    display: none;
  }

  @media (min-width: 600px) {
    .character-station.neighbor1 {
      display: flex;
    }
  }

  @media (min-width: 1024px) {
    .character-station.neighbor2 {
      display: flex;
    }
  }

  .character-station.current {
    color: #333;
    min-width: 120px;
    height: 120px;
    font-size: 4rem;
  }

  /* Bの下に出す Unicode 名 */
  .unicode-name {
    position: absolute;
    bottom: -1.5rem;
    z-index: 2;
    white-space: nowrap;
    letter-spacing: 0.05em;
    color: #555;
    font-weight: 600;
  }

</style>
  <div class="station-wrap">
    <div class="line-wrapper">
      <div class="line-core">
        <div class="line"></div>
        <div class="character-station neighbor2">@</div>
        <div class="character-station neighbor1">A</div>
        <div class="previous-label">Previous</div>
        <div class="character-station-outer">
          <div class="codepoint">U+0042</div>
          <div class="character-station current">B</div>
          <div class="unicode-name">LATIN CAPITAL LETTER B</div>
        </div>
        <div class="next-label">Next</div>
        <div class="character-station neighbor1">C</div>
        <div class="character-station neighbor2">D</div>
      </div>
    </div>
  </div>
